<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal"  method="POST">
            <fieldset>
                {{error}}
                <legend>Delete this post?</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Post Title</label>
                    <div class="col-sm-4">
                        <input type="text" disabled="disabled" placeholder="Post title" id="post-title" class="form-control" name="title" required value="{{title}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Content</label>
                    <div class="col-sm-6">
                        <textarea disabled="disabled" class="form-control" id="post-content" rows="5" name="content" required >{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-danger">
                            Delete!
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>