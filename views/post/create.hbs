<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/post/create">
            <fieldset>
                {{error}}
                <legend>New Post</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Post Title</label>
                    <div class="col-sm-4">
                        <input type="text" placeholder="Post title" id="post-title" class="form-control" name="title" required>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="post-content" rows="5" name="content" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-danger">
                            Delete!
                            <i class="fas fa-trash-alt"></i>
                        </button>
                        <button type="submit" class="btn btn-success">
                            Submit!
                            <i class="fas fa-share-square"></i>
                        </button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>